using System.Collections;
using System;
using System.Text;
namespace lessons
{
    class program
    {
        static void Main()
        {
            int receiptTimeMinutes = 10;
            int minutesInHour = 60;
            Console.Write("Людей в очереди: ");
            int peopleInLine = Convert.ToInt32(Console.ReadLine());
            int timeInLineMinutes = peopleInLine * receiptTimeMinutes;
            int hoursInLine = timeInLineMinutes / minutesInHour;
            int minutesInLine = timeInLineMinutes % minutesInHour;
            Console.WriteLine($"Вы должны отстоять в очереди {hoursInLine} часа и {minutesInLine} минут");
        }
    }
}
