using System.Collections;
using System;
using System.Text;
namespace lessons
{
    class program
    {
        static void Main()
        {
            int receiptTime = 10;
            int hour = 60;
            Console.Write("Людей в очереди: ");
            int peopleInLine = Convert.ToInt32(Console.ReadLine());
            int hoursInLine = peopleInLine * receiptTime / hour;
            int minutesInLine = peopleInLine * receiptTime % hour;
            Console.WriteLine($"Вы должны отстоять в очереди {hoursInLine} часа и {minutesInLine} минут");
        }
    }
}
