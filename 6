using System.Collections;
using System;
using System.Text;
namespace lessons
{
    class program
    {
        static void Main()
        {
            int receiptTime = 10;
            int hour = 60;
            Console.Write("Людей в очереди: ");
            int peopleInLine = Convert.ToInt32(Console.ReadLine());
            int timeInLine = peopleInLine * receiptTime;
            int hoursInLine = timeInLine / hour;
            int minutesInLine = timeInLine % hour;
            Console.WriteLine($"Вы должны отстоять в очереди {hoursInLine} часа и {minutesInLine} минут");
        }
    }
}
